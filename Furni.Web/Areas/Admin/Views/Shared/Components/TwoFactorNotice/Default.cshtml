@model TwoFactorNoticeViewModel

@if (!Model.IsTwoFactorEnabled)
{
    <!--begin::Notice Enabled-->
    <div id="enable-2fa-notice" class="notice d-flex bg-light-primary rounded border-primary border border-dashed p-6">
        <!-- Content and action for enabling 2FA -->
        <i class="ki-duotone ki-shield-tick fs-2tx text-primary me-4">
            <span class="path1"></span>
            <span class="path2"></span>
        </i>
        <div class="d-flex flex-stack flex-grow-1 flex-wrap flex-md-nowrap">
            <div class="mb-3 mb-md-0 fw-semibold">
                <h4 class="text-gray-900 fw-bold">Secure Your Account</h4>
                <div class="fs-6 text-gray-700 pe-7">Two-factor authentication adds an extra layer of security to your account. To log in, you'll need to provide a 6-digit code in addition to your password.</div>
            </div>
            <a href="javascript:;" data-url="/Admin/Manager/TwoFactor" data-title="Authentication Method" class="btn btn-primary px-6 align-self-center text-nowrap js-two-factor">Enable</a>
        </div>
    </div>
    <!--end::Notice Enabled-->
}

@if (Model.IsTwoFactorEnabled)
{
    <!--begin::Notice Disable-->
    <div id="disable-2fa-notice" class="notice d-flex bg-light-primary rounded border-primary border border-dashed p-6">
        <!-- Content and action for disabling 2FA -->
        <i class="ki-duotone ki-shield-tick fs-2tx text-danger me-4">
            <span class="path1"></span>
            <span class="path2"></span>
        </i>
        <div class="d-flex flex-stack flex-grow-1 flex-wrap flex-md-nowrap">
            <div class="mb-3 mb-md-0 fw-semibold">
                <h4 class="text-gray-900 fw-bold">Two-Factor Authentication Enabled</h4>
                <div class="fs-6 text-gray-700 pe-7">Your account is currently protected by two-factor authentication.</div>
            </div>
            <a href="javascript:;" class="btn btn-danger px-6 align-self-center text-nowrap js-disable-two-factor"
               data-message="Are you sure that you want to Disable Two-Factor Authentication?"
               data-url="/Admin/Manager/DisableTwoFactorAuthentication">Disable</a>
        </div>
    </div>
    <!--end::Notice Disable-->
}