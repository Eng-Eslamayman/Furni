@model ReviewFormViewModel

<form id="reviewForm" method="post">
	<div class="box-container">
        <div class="rating-star">
            <input type="radio" id="star5" name="Rating" value="5" asp-for="Rating">
            <label for="star5"></label>
            <input type="radio" id="star4" name="Rating" value="4" asp-for="Rating">
            <label for="star4"></label>
            <input type="radio" id="star3" name="Rating" value="3" asp-for="Rating">
            <label for="star3"></label>
            <input type="radio" id="star2" name="Rating" value="2" asp-for="Rating">
            <label for="star2"></label>
            <input type="radio" id="star1" name="Rating" value="1" asp-for="Rating">
            <label for="star1"></label>
        </div>
        <textarea asp-for="Comment" placeholder="Type a Comment.."></textarea>
        <span asp-validation-for="Comment" class="text-danger d-block"></span>
        <input type="hidden" asp-for="ProductId" /> <!-- Binds ProductId automatically -->
		<div>
			<div class="formatting">

                <!-- Place Order Button -->
                <div class="d-flex">
                    <a href="js-javascript:;" class="button button-3d js-add-review">
                        <svg fill="none" viewBox="0 0 24 24" height="18" width="18" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" stroke="#ffffff" d="M12 5L12 20"></path>
                            <path stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" stroke="#ffffff" d="M7 9L11.2929 4.70711C11.6262 4.37377 11.7929 4.20711 12 4.20711C12.2071 4.20711 12.3738 4.37377 12.7071 4.70711L17 9"></path>
                        </svg>
                    </a>
                </div>

			</div>
		</div>
	</div>
</form>