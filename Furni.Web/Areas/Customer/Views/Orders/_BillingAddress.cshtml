@model OrderFormViewModel

<h3>Billing Address</h3>
<div class="col-md-12 form-group">
    <label asp-for="FullName">Full Name:</label>
    <input type="text" asp-for="FullName" class="form-control">
</div>
<span asp-validation-for="FullName" class="text-danger d-block"></span>


<div class="w-100"></div>
<div class="col-12 form-group">
    <label asp-for="Address">Address:</label>
    <input type="text" asp-for="Address" class="form-control">
</div>
<span asp-validation-for="Address" class="text-danger d-block"></span>


<div class="col-12 form-group">
    <label asp-for="City">City / Town</label>
    <input type="text" asp-for="City" class="form-control">
</div>
<span asp-validation-for="City" class="text-danger d-block"></span>

<div class="col-12 form-group">
    <label asp-for="State">State</label>
    <input type="text" asp-for="State" class="form-control">
</div>
<span asp-validation-for="State" class="text-danger d-block"></span>


<div class="col-md-12 form-group">
    <label asp-for="Email">Email Address:</label>
    <input type="email" asp-for="Email" class="form-control">
</div>
<span asp-validation-for="Email" class="text-danger d-block"></span>


<div class="col-md-12 form-group">
    <label asp-for="PhoneNumber">Phone:</label>
    <input type="text" asp-for="PhoneNumber" class="form-control">
</div>
<span asp-validation-for="PhoneNumber" class="text-danger d-block"></span>


<div class="col-md-12 form-group">
    <label asp-for="PostalCode">Postal Code:</label>
    <input type="text" asp-for="PostalCode" class="form-control">
</div>
<span asp-validation-for="PostalCode" class="text-danger d-block"></span>

