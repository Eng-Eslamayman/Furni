@model CustomerHomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<partial name="_CardPannel" />


<partial name="_Slider" model="@Model.CustomProductViewModel" />


<partial name="_Content" model="Tuple.Create(Model.CustomCategoryViewModel, Model.CustomArrivalProductViewModel)" />


@section Scripts {

	<script src="~/lib/jquery/dist/jquery.min.js"></script>

	<script>
		$(document).ready(function () {
			$('.js-category-Id').on('click', function (event) {
				event.preventDefault();
				const categoryId = $(this).data('category-id');
				sessionStorage.setItem('selectedCategoryId', categoryId);
				window.location.href = '/Customer/Products';
			});
		});
	</script>
}










