@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}



<!--begin::Root-->
<div class="d-flex flex-column flex-root">
    <!--begin::Page bg image-->
    <style>
        body {
            background-image: url('/assets/images/bg10.jpeg');
        }

        [data-bs-theme="dark"] body {
            background-image: url('/assets/images/bg10-dark.jpeg');
        }
    </style>
    <!--end::Page bg image-->
    <!--begin::Authentication - Two-factor -->
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <!--begin::Aside-->
        <div class="d-flex flex-lg-row-fluid">
            <!--begin::Content-->
            <div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100">
                <!--begin::Image-->
                <img class="theme-light-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/assets/images/agency.png" alt="" />
                <img class="theme-dark-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/assets/images/agency.png" alt="" />
                <!--end::Image-->
                <!--begin::Title-->
                <h1 class="text-gray-800 fs-2qx fw-bold text-center mb-7">Furnihuture, By Eslam and Abdullah</h1>
                <!--end::Title-->
            </div>
            <!--end::Content-->
        </div>
        <!--begin::Aside-->
        <!--begin::Body-->
        <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
            <!--begin::Wrapper-->
            <div class="bg-body d-flex flex-column flex-center rounded-4 w-md-600px p-10">
                <!--begin::Content-->
                <div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
                    <!--begin::Wrapper-->
                    <div class="d-flex flex-center flex-column flex-column-fluid pb-15 pb-lg-20">
                        <!--begin::Form-->
                        <form class="form w-100 mb-13" method="post" novalidate="novalidate" asp-route-returnUrl="@Model.ReturnUrl">
                            <!--begin::Icon-->
                            <div class="text-center mb-10">
                                <img alt="Logo" class="mh-125px" src="~/assets/images/logo.png" />
                            </div>
                            <!--end::Icon-->
                            <!--begin::Heading-->
                            <div class="text-center mb-10">
                                <!--begin::Title-->
                                <h1 class="text-gray-900 mb-3">Log in with Two-Factor Verification</h1>
                                <!--end::Title-->
                                <!--begin::Sub-title-->
                                <div class="text-muted fw-semibold fs-5 mb-5">
                                    <p>Your login is protected with an authenticator app. Enter your authenticator code below.</p>
                                </div>
                                <!--end::Sub-title-->
                            </div>
                            <!--end::Heading-->
                            <!--begin::Section-->
                            <div class="mb-5">
                                <!--begin::Label-->
                                <div class="fw-bold text-start text-gray-900 fs-6 mb-1 ms-1">Type your 6 digit security code</div>
                                <!--end::Label-->
                                <!--begin::Input group-->
                                <div class="d-flex flex-wrap flex-stack">
                                    <input type="text" data-inputmask="'mask': '9', 'placeholder': ''" maxlength="1" class="form-control bg-transparent h-60px w-60px fs-2qx text-center mx-1 my-2" asp-for="Input.TwoFactorCode[0]" onkeyup="moveToNextInput(this)" />
                                    <input type="text" data-inputmask="'mask': '9', 'placeholder': ''" maxlength="1" class="form-control bg-transparent h-60px w-60px fs-2qx text-center mx-1 my-2" asp-for="Input.TwoFactorCode[1]" onkeyup="moveToNextInput(this)" />
                                    <input type="text" data-inputmask="'mask': '9', 'placeholder': ''" maxlength="1" class="form-control bg-transparent h-60px w-60px fs-2qx text-center mx-1 my-2" asp-for="Input.TwoFactorCode[2]" onkeyup="moveToNextInput(this)" />
                                    <input type="text" data-inputmask="'mask': '9', 'placeholder': ''" maxlength="1" class="form-control bg-transparent h-60px w-60px fs-2qx text-center mx-1 my-2" asp-for="Input.TwoFactorCode[3]" onkeyup="moveToNextInput(this)" />
                                    <input type="text" data-inputmask="'mask': '9', 'placeholder': ''" maxlength="1" class="form-control bg-transparent h-60px w-60px fs-2qx text-center mx-1 my-2" asp-for="Input.TwoFactorCode[4]" onkeyup="moveToNextInput(this)" />
                                    <input type="text" data-inputmask="'mask': '9', 'placeholder': ''" maxlength="1" class="form-control bg-transparent h-60px w-60px fs-2qx text-center mx-1 my-2" asp-for="Input.TwoFactorCode[5]" onkeyup="moveToNextInput(this)" />
                                    <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                                </div>
                                <!--begin::Input group-->
                            </div>
                            <!--end::Section-->


                            <!--begin::Section-->
                            <div class="mb-5">
                                <!--begin::Input group-->
                                <div class="d-flex flex-wrap flex-stack">
                                    <label asp-for="Input.RememberMachine" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMachine" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMachine)
                                    </label>
                                </div>
                                <!--begin::Input group-->
                            </div>
                            <!--end::Section-->

                            <input asp-for="RememberMe" type="hidden" />
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <!--begin::Submit-->
                            <div class="d-flex flex-center">
                                <button type="submit" class="btn btn-lg btn-success fw-bold">
                                    <span class="indicator-label">Log in</span>
                                    <span class="indicator-progress">
                                        Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                            </div>
                            <!--end::Submit-->
                        </form>
                        <!--end::Form-->
                        <!--begin::Notice-->
                        <div class="text-center fw-semibold fs-5">
                            <span class="text-muted me-1">Don't have access to your authenticator device? You can</span>
                            <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary fs-5 me-1">log in with a recovery code</a>
                        </div>
                        <!--end::Notice-->
                    </div>
                    <!--end::Wrapper-->
                </div>
                <!--end::Content-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Body-->
    </div>
    <!--end::Authentication - Two-factor-->
</div>
<!--end::Root-->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function moveToNextInput(currentField) {
            if (currentField.value.length === 1) {
                var nextField = currentField.nextElementSibling;
                if (nextField) {
                    nextField.focus();
                }
            }
        }
    </script>
}