<!--begin::Toolbar-->
<div class="toolbar d-flex flex-stack py-3 py-lg-5" id="kt_toolbar">
	<!--begin::Container-->
	<div id="kt_toolbar_container" class="container-xxl d-flex flex-stack flex-wrap">
		<!--begin::Page title-->
		<div class="page-title d-flex flex-column me-3">
			@if (ViewBag.ControllerName == "Products" && (ViewBag.ActionName == "Create" || ViewBag.ActionName == "Edit"))
			{
				<!--begin::Title-->
				<h1 class="d-flex text-gray-900 fw-bold my-1 fs-3">Product Form</h1>
				<!--end::Title-->
			}
			else if (ViewBag.ControllerName == "Products" && ViewBag.ActionName == "Index")
			{
				<!--begin::Title-->
				<h1 class="d-flex text-gray-900 fw-bold my-1 fs-3">Products</h1>
				<!--end::Title-->
			}

			@if (ViewBag.ControllerName == "Categories" && ViewBag.ActionName == "Index")
			{
				<!--begin::Title-->
				<h1 class="d-flex text-gray-900 fw-bold my-1 fs-3">Categories</h1>
				<!--end::Title-->
			}

			@if (ViewBag.ControllerName == "Users" && ViewBag.ActionName == "Index")
			{
				<div class="d-flex align-items-center">
					<div class="symbol symbol-40px me-4">
						<div class="symbol-label fs-2 fw-semibold text-success">
							<span class="menu-icon">
								<!--begin::Svg Icon | path: /var/www/preview.keenthemes.com/keenthemes/metronic/docs/core/html/src/media/icons/duotune/communication/com013.svg-->
								<span class="svg-icon svg-icon-muted svg-icon-2hx">
									<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
										<path d="M6.28548 15.0861C7.34369 13.1814 9.35142 12 11.5304 12H12.4696C14.6486 12 16.6563 13.1814 17.7145 15.0861L19.3493 18.0287C20.0899 19.3618 19.1259 21 17.601 21H6.39903C4.87406 21 3.91012 19.3618 4.65071 18.0287L6.28548 15.0861Z" fill="currentColor" />
										<rect opacity="0.3" x="8" y="3" width="8" height="8" rx="4" fill="currentColor" />
									</svg>
								</span>
								<!--end::Svg Icon-->
							</span>
						</div>
					</div>
					<!--begin::Title-->
					<div class="d-flex flex-column pe-0 pe-sm-10">
						<h1 class="d-flex text-gray-900 fw-bold my-1 fs-3">Users</h1>
					</div>
					<!--end::Title-->
				</div>
			}

			<!--begin::Breadcrumb-->
			<ul class="breadcrumb breadcrumb-dot fw-semibold text-gray-600 fs-7 my-1">
				@if (ViewBag.ControllerName == "Products" && ViewBag.ActionName == "Create")
				{
					<!--begin::Item-->
					<li class="breadcrumb-item text-gray-500">Add Product</li>
					<!--end::Item-->
				}
				else if (ViewBag.ControllerName == "Products" && ViewBag.ActionName == "Edit")
				{
					<!--begin::Item-->
					<li class="breadcrumb-item text-gray-500">Edit Product</li>
					<!--end::Item-->
				}
				else if (ViewBag.ControllerName == "Products" && ViewBag.ActionName == "Index")
				{
					<!--begin::Item-->
					<li class="breadcrumb-item text-gray-500">Products</li>
					<!--end::Item-->
				}

				@if (ViewBag.ControllerName == "Categories" && ViewBag.ActionName == "Index")
				{
					<!--begin::Item-->
					<li class="breadcrumb-item text-gray-600">
						<a asp-action="Index" asp-controller="Home" class="text-gray-600 text-hover-primary">Home</a>
					</li>
					<!--end::Item-->
					<!--begin::Item-->
					<li class="breadcrumb-item text-gray-600">Dashboard</li>
					<!--end::Item-->
					<!--begin::Item-->
					<li class="breadcrumb-item text-gray-500">Categories</li>
					<!--end::Item-->
				}

				@if (ViewBag.ControllerName == "Users" && ViewBag.ActionName == "Index")
				{
					<!--begin::Item-->
					<li class="breadcrumb-item text-gray-600">
						<a asp-action="Index" asp-controller="Home" class="text-gray-600 text-hover-primary">Home</a>
					</li>
					<!--end::Item-->
					<!--begin::Item-->
					<li class="breadcrumb-item text-gray-600">Dashboard</li>
					<!--end::Item-->
					<!--begin::Item-->
					<li class="breadcrumb-item text-gray-500">Users</li>
					<!--end::Item-->
				}

			</ul>
			<!--end::Breadcrumb-->
		</div>
		<!--end::Page title-->
		<!--begin::Actions-->
		<div class="d-flex align-items-center py-2">
			@if (ViewBag.ControllerName == "Products" && ViewBag.ActionName == "Index")
			{
				<!--begin::Button-->
				<a class="btn btn-sm btn-primary" asp-action="Create">Create</a>
				<!--end::Button-->
			}
			else if (ViewBag.ControllerName == "Products" && (ViewBag.ActionName == "Create" || ViewBag.ActionName == "Edit"))
			{
				<!--begin::Button-->
				<a class="btn btn-sm btn-primary" asp-action="Index">Back</a>
				<!--end::Button-->
			}

			@if (ViewBag.ControllerName == "Categories" && ViewBag.ActionName == "Index")
			{
				<!--begin::Button-->
				<a href="javascript:;" 
				class="btn btn-sm btn-primary js-render-modal" 
				data-title="Add Category"
				   data-url="/Admin/Categories/Create">Create</a>
				<!--end::Button-->
			}

			@if (ViewBag.ControllerName == "Users" && ViewBag.ActionName == "Index")
			{
				<!--begin::Button-->
				<a href="javascript:;"
				   class="btn btn-sm btn-primary js-render-modal"
				   data-title="Add User"
				   data-url="/Admin/Users/Create">Create</a>
				<!--end::Button-->
			}
		</div>
		<!--end::Actions-->
	</div>
	<!--end::Container-->
</div>
<!--end::Toolbar-->