@model IEnumerable<CustomerReportViewModel>
@{
    Layout = "_ReportsLayout";
}

<style>

    #order {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
        font-size: 50px;
    }

        #order td, #order th {
            border: 1px solid #ddd;
            padding: 12px;
            min-height: 20px;
            min-width: 60px;
            box-sizing: border-box;
        }

        #order tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #order th {
            padding-top: 15px;
            padding-bottom: 15px;
            text-align: left;
            background-color: #000;
            color: white;
        }

</style>

<table id="order">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Total Buying Price</th>
            <th>Number Of Orders</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.FullName</td>
                <td>@report.TotalBuyingPrice</td>
                <td>@report.NumberOfOrders</td>
            </tr>
        }
        <tr>
            <td colspan="1">Totals:</td>
            <td>@Model.Sum(c => c.TotalBuyingPrice).ToString("C")</td>
        </tr>
    </tbody>
</table>

